<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcgrady.xproject.testing.samples">
    <!-- 勿扰模式 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xprojectmvvm">
        <activity
            android:name="com.mcgrady.xproject.testing.samples.bundle.BundleActivity"
            android:exported="false" />
        <activity
            android:name="com.mcgrady.xproject.testing.samples.window_insets_controller.WindowInsetsControllerActivity"
            android:exported="true"
            android:label="@string/title_activity_window_insets_controller"
            android:theme="@style/Theme.Xprojectmvvm.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mcgrady.xproject.testing.samples.ImageViewScaleTypeActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mcgrady.xproject.testing.samples.ShapeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>