<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcgrady.xproject.testing.samples">
    <!-- 勿扰模式 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xprojectmvvm">
        <activity
            android:name=".customview.CustomViewActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".service.SampleServiceActivity"
            android:exported="true">
        </activity>

        <service
            android:name=".service.SampleService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".fragment.SampleFragmentActivity"
            android:exported="true" />
        <activity
            android:name=".fragment.SampleTopBottomFragmentActivity"
            android:exported="true" />
        <activity
            android:name=".bundle.BundleActivity"
            android:exported="false" />
        <activity
            android:name=".jetpack.navigation.WindowInsetsControllerActivity"
            android:exported="true"
            android:label="@string/title_activity_window_insets_controller"
            android:theme="@style/Theme.Xprojectmvvm.NoActionBar"></activity>
        <activity
            android:name=".image.ImageViewScaleTypeActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".image.ShapeActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>