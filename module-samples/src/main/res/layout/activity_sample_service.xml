<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.SampleServiceActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_service"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start service"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stop_service"
        app:layout_constraintTop_toBottomOf="@id/btn_start_service"
        app:layout_constraintStart_toStartOf="@id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop service"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_bind_service"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_start_service"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind service"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_unbind_service"
        app:layout_constraintTop_toBottomOf="@id/btn_bind_service"
        app:layout_constraintStart_toStartOf="@id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind service"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_randown_num"
        app:layout_constraintTop_toBottomOf="@id/btn_stop_service"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get Randown Number"/>


</androidx.constraintlayout.widget.ConstraintLayout>