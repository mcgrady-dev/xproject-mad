<resources>
    <declare-styleable name="ProgressCircularView">
        <attr name="cv_distance_to_border" format="dimension" />
        <attr name="cv_border_thickness" format="dimension" />
        <attr name="cv_border_thickness_highlight" format="dimension" />
        <!--右下角的圆圈的背景色-->
        <attr name="cv_border_color" format="color" />
        <attr name="cv_border_color_end" format="color" />
        <attr name="cv_border_highlight_color" format="color" />
        <attr name="cv_border_highlight_color_end" format="color" />
        <!--外部圆和图片圆之间的背景色，默认是透明的-->
        <attr name="cv_middle_color" format="color" />
        <!--外部圆圈的颜色-->
        <attr name="cv_circle_background_color" format="color" />
        <attr name="cv_highlighted" format="boolean" />
        <attr name="cv_badge_text_size" format="dimension"/>
        <attr name="cv_badge_text_color" format="color"/>
        <attr name="cv_show_badge" format="boolean" />
        <attr name="cv_badge_color" format="color" />
        <!--右下角的外部圆的颜色-->
        <attr name="cv_badge_stroke_color" format="color" />
        <!--右下角的外部圆的宽度-->
        <attr name="cv_badge_stroke_width" format="dimension" />
        <!--右下角的圆形半径-->
        <attr name="cv_badge_radius" format="dimension" />
        <attr name="cv_progress_start_angle" format="float"/>
        <attr name="cv_sweep_angle" format="float"/>
        <attr name="cv_progress_anim_time" format="dimension" />
        <!--进度最大值-->
        <attr name="cv_progress_max_value" format="integer" />
        <!--当前进度值-->
        <attr name="cv_progress_cur_value" format="integer" />
        <attr name="cv_progress_size" format="dimension" />
        <attr name="cv_progress_color" format="color"/>
        <attr name="cv_progress_width" format="dimension"/>
        <attr name="cv_progress_colors" format="color" />
        <!-- 背景圆弧颜色 -->
        <attr name="cv_outring_bg_color" format="color" />
        <!-- 背景圆弧宽度 -->
        <attr name="cv_outring_width" format="dimension" />
        <attr name="cv_badger_alpha" format="float"/>
        <attr name="cv_circle_alpha" format="float"/>
        <attr name="cv_badge_resource" format="reference"/>
        <attr name="cv_inner_resource" format="reference"/>
        <attr name="cv_progress_text" format="string"/>
        <attr name="cv_course_type_name" format="string"/>
        <attr name="cv_course_name" format="string"/>
    </declare-styleable>

    <declare-styleable name="LabelBorderLayout">
        <attr name="borderColor" format="color" />
        <attr name="borderColorStart" format="color" />
        <attr name="borderColorEnd" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="labelTextColor" format="color" />
        <attr name="labelText" format="string" />
        <attr name="labelImage" format="reference" />
        <attr name="labelImageSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="mv_backgroundColor" format="color"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_cornerRadius" format="dimension"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="mv_strokeWidth" format="dimension"/>
        <!-- 圆角边框颜色-->
        <attr name="mv_strokeColor" format="color"/>
        <!-- 圆角弧度是高度一半-->
        <attr name="mv_isRadiusHalfHeight" format="boolean"/>
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="mv_isWidthHeightEqual" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="android:foreground"/>
        <attr name="shadowMargin" format="dimension"/>
        <attr name="shadowMarginTop" format="dimension"/>
        <attr name="shadowMarginLeft" format="dimension"/>
        <attr name="shadowMarginRight" format="dimension"/>
        <attr name="shadowMarginBottom" format="dimension"/>
        <attr name="slCornerRadius" format="dimension"/>
        <attr name="cornerRadiusTL" format="dimension"/>
        <attr name="cornerRadiusTR" format="dimension"/>
        <attr name="cornerRadiusBL" format="dimension"/>
        <attr name="cornerRadiusBR" format="dimension"/>
        <attr name="foregroundColor" format="color"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="shadowRadius" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ShadowLayoutParams">
        <attr name="layout_gravity">
            <flag name="top"
                value="0x30"/>
            <flag name="bottom"
                value="0x50"/>
            <flag name="left"
                value="0x03"/>
            <flag name="right"
                value="0x05"/>
            <flag name="center_vertical"
                value="0x10"/>
            <flag name="fill_vertical"
                value="0x70"/>
            <flag name="center_horizontal"
                value="0x01"/>
            <flag name="fill_horizontal"
                value="0x07"/>
            <flag name="center"
                value="0x11"/>
            <flag name="fill"
                value="0x77"/>
            <flag name="clip_vertical"
                value="0x80"/>
            <flag name="clip_horizontal"
                value="0x08"/>
            <flag name="start"
                value="0x00800003"/>
            <flag name="end"
                value="0x00800005"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundedLayout">
        <attr name="rlRoundedCornerRadius" format="dimension"/>
        <attr name="rlRoundAsCircle" format="boolean"/>
        <attr name="rlRoundTopLeft" format="boolean"/>
        <attr name="rlRoundTopRight" format="boolean"/>
        <attr name="rlRoundBottomLeft" format="boolean"/>
        <attr name="rlRoundBottomRight" format="boolean"/>
        <attr name="rlRoundingBorderWidth" format="dimension"/>
        <attr name="rlRoundingBorderColor" format="color"/>
        <attr name="rlBgColor" format="color"/>
        <attr name="rlBgStartColor" format="color"/>
        <attr name="rlBgEndColor" format="color"/>
        <attr name="rlRoundingElevation" format="dimension"/>
        <attr name="rlColorOrientation" format="enum">
            <enum name="TOP_BOTTOM" value="0"/>
            <enum name="TR_BL" value="1"/>
            <enum name="RIGHT_LEFT" value="2"/>
            <enum name="BR_TL" value="3"/>
            <enum name="BOTTOM_TOP" value="4"/>
            <enum name="BL_TR" value="5"/>
            <enum name="LEFT_RIGHT" value="6"/>
            <enum name="TL_BR" value="7"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientBackground">
        <attr name="start_color" format="reference" />
        <attr name="end_color" format="reference" />
        <attr name="radius_corner_top_left" format="dimension" />
        <attr name="radius_corner_top_right" format="dimension" />
        <attr name="radius_corner_bottom_right" format="dimension" />
        <attr name="radius_corner_bottom_left" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0"/>
            <enum name="TR_BL" value="1"/>
            <enum name="RIGHT_LEFT" value="2"/>
            <enum name="BR_TL" value="3"/>
            <enum name="BOTTOM_TOP" value="4"/>
            <enum name="BL_TR" value="5"/>
            <enum name="LEFT_RIGHT" value="6"/>
            <enum name="TL_BR" value="7"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="TransformationLayout">
        <!-- A target view that will be transformed from TransformationLayout. -->
        <attr name="transformation_targetView" format="reference" />
        <!-- Duration of the transformation. -->
        <attr name="transformation_duration" format="integer" />
        <!-- Motion of the transformation path. -->
        <attr name="transformation_pathMode" format="enum">
            <enum name="arc" value="0" />
            <enum name="linear" value="1" />
        </attr>
        <!-- The id of the View whose overlay TransitionDrawable will be added to. -->
        <attr name="transformation_zOrder" format="integer" />
        <!-- The container color to be used as the background of the morphing container. -->
        <attr name="transformation_containerColor" format="color" />
        <!-- The all container colors (start and end) to be used as the background of the morphing container. -->
        <attr name="transformation_allContainerColor" format="color" />
        <!-- The color to be drawn under the morphing container but within the bounds of the zOrder. -->
        <attr name="transformation_scrimColor" format="color" />
        <!-- The Direction to be used by this transform. -->
        <attr name="transformation_direction" format="enum">
            <enum name="auto" value="0" />
            <enum name="entering" value="1" />
            <enum name="returning" value="2" />
        </attr>
        <!-- The FadeMode to be used to swap the content of the start View with that of the end View. -->
        <attr name="transformation_fadeMode" format="enum">
            <enum name="in" value="0" />
            <enum name="out" value="1" />
            <enum name="cross" value="2" />
            <enum name="through" value="3" />
        </attr>
        <!-- The FitMode to be used when scaling the incoming content of the end View. -->
        <attr name="transformation_fitMode" format="enum">
            <enum name="auto" value="0" />
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>
        <!-- The elevation that will be used to render a shadow around the container at the start of the transition. -->
        <attr name="transformation_startElevation" format="float" />
        <!-- The elevation that will be used to render a shadow around the container at the end of the transition. -->
        <attr name="transformation_endElevation" format="float" />
        <!-- Whether shadows should be drawn around the container to approximate native elevation shadows on the start and end views. -->
        <attr name="transformation_elevationShadowEnabled" format="boolean" />
        <!-- Whether to hold the last frame at the end of the animation. -->
        <attr name="transformation_holdAtEndEnabled" format="boolean" />
    </declare-styleable>

</resources>

