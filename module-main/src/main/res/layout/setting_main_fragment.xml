<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.mcgrady.xproject.ui.setting.SettingMainViewModel" />

        <variable
            name="adapter"
            type="com.mcgrady.xproject.ui.adapter.SettingMainListAdapter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mcgrady.xproject.ui.setting.SettingMainFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adapter="@{adapter}"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:submitList="@{vm.liveData}"
            tools:listitem="@layout/recycler_item_setting_main" />

    </FrameLayout>
</layout>